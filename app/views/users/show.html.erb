<div class="container box">
        
        <p id="notice"></p>
      
      	<div class="row">
      		<div class="col-xs-3">
      			<%= render 'shared/userinfo', user: current_user %>
				<%= render 'shared/newbook', book: Book.new %>
      		</div>
				
			<div class="col-xs-9">
			    <h2>Books</h2>
			    	<table class="table table-hover table-inverse">
						<thead>
						<tr> 
				          <th></th>
				          <th>Title</th>
				          <th>Opinion</th>
				          <th colspan="3"></th>
			          	</tr>
			      		</thead>

					      <tbody>
					      	<% @user.books.each do |book| %>
					      	<tr>
						      	<% if book.user.image? %>
						      		<td><%= image_tag book.user.image.url, style:"width:40px; height:40px;" %></td>
						      	<% else %>
						      		<td class="userimage"><%= image_tag 'no_image.jpg', style:"width:40px; height:40px;" %></td>
						      	<% end %>
							    <td><%= link_to book.title, book_path(book.id) %></td>
								<td><%= book.opinion %></td>
								<td id="favorite-btn-<%=book.id%>"><%= render 'favorites/favorite', book: book %></td>
						    	<th colspan="3"></th>
						    </tr>
						    <% end %>
					      </tbody>
			    	</table>
			</div>
		</div>
</div>