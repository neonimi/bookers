<div class="container box">
        
        <p id="notice"></p>
      
      	<div class="row">
      	<div class="col-xs-3">
			<%= render 'shared/userinfo', user: current_user %>
			<%= render 'shared/newbook', book: Book.new %>
		</div>
			<div class="col-xs-9">
			    <h2>Users</h2>
			    	<table class="table table-hover table-inverse">
						<thead>
						<tr> 
				          <th></th>
				          <th>image</th>
				          <th>name</th>
				          <th colspan="3"></th>
			          	</tr>
			      		</thead>

					      <tbody>
					      <% @users.each do |user| %>
						  	<tr>
						      	<th></th>
						      	<% if user.image? %>
							     	<td><%= image_tag user.image.url, style:"width:40px; height:40px;" %></td>	
								    <% else %>
								    <td><%= image_tag 'no_image.jpg', style:"width:40px; height:40px;" %></td>
								<% end %>		      
					   			<td><%= user.name %></td>
								<td><%= link_to 'show', user_path(user.id) %></td>
							   <th colspan="3"></th>
							   <% if current_user != user %>
								<td id="relationships-btn-<%= user.id %>"><%= render 'shared/relationship', user: user %></td>
							   <% end %>
							</tr>
						  <% end %>
					      </tbody>
			    	</table>
			</div>
		</div>
</div>