<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

 <header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <span class="glyphicon glyphicon-book">Bookers</span>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
      	<li><%= link_to ' Home', user_path(current_user), class:"glyphicon glyphicon-home" %></li>
      	<li><%= link_to 'Users', users_path, class:"glyphicon glyphicon-home" %></li>
      	<li><%= link_to 'Books', books_path, class:"glyphicon glyphicon-home" %></li>
      	<li><%= link_to ' logout', destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-link" %></li>
      <% else %>
      	<li><%= link_to ' Home', root_path, class:"glyphicon glyphicon-home" %></li>
      	<li><%= link_to ' About', home_about_path, class:"glyphicon glyphicon-link" %></li>
      	<li><%= link_to ' sign up', new_user_registration_path, class:"glyphicon glyphicon-edit" %></li>
      	<li><%= link_to ' login', new_user_session_path, class:"glyphicon glyphicon-log-in" %></li>
