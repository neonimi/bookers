<div class="body">
<div class="container box">
	<h1>Editing Book</h1>
	  <div class="col-xs-3"></div>

	  <div class="col-xs-9">
		<%= form_for(@book) do |f| %>
			<%= f.label :title, class: "col-xs-12" %>
			<%= f.text_field :title, class: "col-xs-12" %>
			<%= f.label :opinion, class: "col-xs-12" %>
			<%= f.text_field :opinion, class: "col-xs-12" %>
			<%= f.submit 'Update Book', class: "btn btn-primary col-xs-12"%>
		<% end %>
		<%= link_to 'Show', book_path(@book.id) %>|<%= link_to 'Back', books_path %>
	  </div>
</div>
</div>
