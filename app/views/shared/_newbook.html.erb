<div class="col-xs-12">
    <h2>New book</h2>

<%= form_for(book) do |f| %>
	<div class="field row">
	  <%= f.label :title, class: "col-xs-12" %>
	  <%= f.text_field :title, class: "col-xs-12" %>
	</div>
	<div class="field row">
	  <%= f.label :opinion,  class: "col-xs-12" %>
	  <%= f.text_area :opinion, class: "col-xs-12" %>
	</div>
  <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
<% end %>

</div>