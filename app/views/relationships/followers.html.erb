<div class="container box">
        followers.html.erb
        <p id="notice"></p>
      
      	<div class="row">
      	<div class="col-xs-3">
			<%= render 'shared/userinfo', user: current_user %>
			<%= render 'shared/newbook', book: Book.new %>
		</div>
			<div class="col-xs-9">
			    <h2>Users</h2>
			    	<table class="table table-hover table-inverse">
						<thead>
						<tr> 
				          <th></th>
				          <th>image</th>
				          <th>name</th>
				          <th colspan="3"></th>
			          	</tr>
			      		</thead>

					      <tbody>
					      <% @followers.each do |user| %>
						  	<tr>
						      	<th></th>
						      	<% if user.image? %>
							     	<td><%= image_tag user.image.url %></td>	
								    <% else %>
								    <td><%= image_tag 'no_image.jpg' %></td>
								<% end %>		      
					   			<td><%= user.name %></td>
								<td><%= link_to 'show', user_path(user.id) %></td>
							   <th colspan="3"></th>
							   <% if current_user != user %>
								   	<td><% if user.followed_by?(current_user) %>
								   		<%= link_to "follow解除", user_relationships_path(user), method: :delete %>
								   	<% else %>
								   	<%= link_to "followする", user_relationships_path(user), method: :post %></td>	
								   	<% end %>
							   	<% end %>
							</tr>
						  <% end %>
					      </tbody>
			    	</table>
			</div>
		</div>
</div>